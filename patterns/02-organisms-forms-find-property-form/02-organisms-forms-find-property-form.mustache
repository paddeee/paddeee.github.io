{{# findPropertyForm }}
<form class="c-form  c-form--stacked-centre {{ styleModifier }}" method="post" action="{{ link.pages-dashboard }}">

  <div class="c-form__sale-or-rent">
    <div class="c-form__sale-button-holder">{{> atoms-button(btnText: "For Sale") }}</div>
    <div class="c-form__rent-button-holder">{{> atoms-button(btnText: "For Rent", btnClass: "active") }}</div>
  </div>

  <div class="c-form__sale-or-rent-form">
    <h2 class="c-form__title">{{ title }}</h2>
    <p>{{ summary }}</p>

    <div class="c-form__split  c-form__location">
      {{> molecules-field(id: "SearchAreaField", type: "text", label: "Search Area") }} {{> molecules-select-dropdown(id: "Radius Dropdown", label: "Search Area") }}
    </div>
    {{> molecules-combined-dropdown(symbol: "Â£", className: "c-form__price", id1: "MinimumPrice", id2: "MaximumPrice", type: "number", label1: "Price From", label2: "Price To") }} {{> molecules-combined-dropdown(className: "c-form__beds", id1: "MinimumBeds",
    id2: "MaximumBeds", label1: "Min Beds", label2: "Max Beds") }} {{> molecules-select-dropdown(className: "c-form__type", id: "PropertyType", label: "Property Type") }} {{> molecules-select-dropdown(className: "c-form__features", id: "PropertyFeatures",
    label: "Property Features") }}

    <div class="c-form__actions">
      {{> atoms-button(btnText: "Search") }}
    </div>
  </div>
</form>
<!--end c-form--stacked-->
{{/ findPropertyForm}}